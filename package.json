{
  "name": "tetris-solarized",
  "version": "1.0.1",
  "description": "Electron Tetris",
  "main": "./dist/main.prod.js",
  "scripts": {
    "start": "cross-env START_HOT=1 NODE_ENV=development webpack-dev-server --config ./webpack.config.dev.babel.js",
    "start-main-dev": "cross-env HOT=1 NODE_ENV=development electron -r @babel/register ./src/main.js",
    "build-renderer": "cross-env NODE_ENV=production webpack --config ./webpack.config.renderer.prod.babel.js --colors",
    "build-main": "cross-env NODE_ENV=production webpack --config ./webpack.config.main.prod.babel.js --colors",
    "build-all": "npm run build-renderer && npm run build-main",
    "package-mac": "npm run build-all && electron-packager . --overwrite --platform=darwin --arch=x64 --icon=src/images/icons/mac/tetris-logo.icns --prune=true --out=release-builds",
    "format": "prettier -w src/**/*.js",
    "lint": "eslint src/**/*.js",
    "test": "jest -w 8"
  },
  "author": "Vui Chee",
  "license": "MIT",
  "dependencies": {
    "@fortawesome/fontawesome-free": "5.7.2",
    "nedb": "1.8.0",
    "react": "^16.7.0",
    "react-dom": "16.8.3",
    "react-redux": "6.0.1",
    "react-router-dom": "4.3.1",
    "redux": "4.0.1",
    "redux-thunk": "2.3.0",
    "shortid": "2.2.14"
  },
  "devDependencies": {
    "@babel/core": "7.3.3",
    "@babel/plugin-proposal-class-properties": "7.3.3",
    "@babel/polyfill": "7.2.5",
    "@babel/preset-env": "7.3.1",
    "@babel/preset-react": "7.0.0",
    "@babel/register": "7.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.0.5",
    "cross-env": "5.2.0",
    "css-loader": "2.1.0",
    "devtron": "1.4.0",
    "electron": "4.0.5",
    "electron-devtools-installer": "^3.2.0",
    "electron-packager": "13.1.0",
    "eslint": "^7.28.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-react": "^7.24.0",
    "eslint-webpack-plugin": "^2.5.4",
    "file-loader": "3.0.1",
    "html-webpack-plugin": "3.2.0",
    "jest": "^27.0.4",
    "mini-css-extract-plugin": "0.5.0",
    "optimize-css-assets-webpack-plugin": "5.0.1",
    "prettier": "^2.3.0",
    "style-loader": "0.23.1",
    "terser-webpack-plugin": "1.2.2",
    "uglifyjs-webpack-plugin": "2.1.2",
    "url-loader": "1.1.2",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14",
    "webpack-merge": "4.2.1"
  }
}
